<h1>Eat Da Burger</h1>

<div class="container">
  <div class="row">
    <form>
      <p>
        <label for="burger">Burger Name</label>
        <input type="text" name="burger" id="burger">
      </p>
      <p>
        <button id="addBurger">Add Burger</button>
      </p>
    </form>
  </div>
  <div class="row">
    <div class="col-md-6">
      <h4>Burgers</h4>
      {{#each burgers}}
      {{#unless this.devoured}}
      <p class="devoured" data-id="{{this.id}}">{{ this.burgerName }}</p>
      {{/unless}}
      {{/each}}
    </div>
    <div class="col-md-6">
      <h4>Devoured</h4>
      {{#each burgers}}
      {{#if this.devoured}}
      <p class="delete" data-id="{{this.id}}">{{ this.burgerName }}</p>
      {{/if}}
      {{/each}}
    </div>
  </div>
</div>